@model ACME.Models.UsuarioDto;

@{
    Layout = null;
    string valido = "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">

    <title>Create Acount</title>
</head>
<body>
    <div class="login-container">
        <h2>Crear Cuenta</h2>
        <form asp-action="GrabarUsuario">
            <div class="input-group">
                <label for="username">Nombre de Usuario</label>
                <div class="col-md-12">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        if (ViewData.ModelState["NombreUsuario"].ValidationState.ToString() == "Invalid")
                            valido = "is-invalid";
                    }

                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
            </div>
            <div class="input-group">
                <label for="email">Correo</label>
                <div class="col-md-12">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        if (ViewData.ModelState["CorreoElectronico"].ValidationState.ToString() == "Invalid")
                            valido = "is-invalid";
                    }

                    <input asp-for="CorreoElectronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
            </div>
            <div class="input-group">
                <label for="password">Contraseña</label>
                <div class="col-md-12">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        if (ViewData.ModelState["Contraseña"].ValidationState.ToString() == "Invalid")
                            valido = "is-invalid";
                    }

                    <input asp-for="Contraseña" class="form-control" type="password" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-info" name="button" value="CrearCuenta">Crear Cuenta</button>
        </form>
    </div>
</body>
</html>
